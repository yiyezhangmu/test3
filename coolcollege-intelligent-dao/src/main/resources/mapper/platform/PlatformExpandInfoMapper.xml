<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolcollege.intelligent.dao.platform.PlatformExpandInfoMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.coolcollege.intelligent.model.platform.PlatformExpandInfoDO" id="platformExpandInfoMap">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="valid" column="valid"/>
        <result property="remark" column="remark"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<sql id="Base_Column_List">
		`id`,
		`code`,
		`name`,
		`valid`,
		`remark`,
		`content`,
		`create_time`,
		`update_time`
	</sql>

	<select id="selectById" resultMap="platformExpandInfoMap">
		select
		<include refid="Base_Column_List"/>
		from platform_expand_info where id = #{id}
	</select>

	<select id="selectByCode" resultMap="platformExpandInfoMap">
		select
		<include refid="Base_Column_List"/>
		from platform_expand_info where code = #{code}
	</select>

	<insert id="save" parameterType="com.coolcollege.intelligent.model.platform.PlatformExpandInfoDO" useGeneratedKeys="true" keyProperty="id">
		insert into platform_expand_info
		(
			`code`,
			`name`,
			`valid`,
			`remark`, 
			`content`, 
			`create_time`
		)
		values
		(
			#{entity.code},
			#{entity.name},
			#{entity.valid},
			#{entity.remark},
			#{entity.content},
			now()
		)
	</insert>
	 
	<update id="updateById" parameterType="com.coolcollege.intelligent.model.platform.PlatformExpandInfoDO">
		update platform_expand_info 
		<set>
			<if test="entity.code != null and entity.code !=''" >`code` = #{entity.code}, </if>
			<if test="entity.name != null and entity.name !=''" >`name` = #{entity.name}, </if>
			<if test="entity.valid != null " >`valid` = #{entity.valid}, </if>
			<if test="entity.remark != null and entity.remark !=''" >`remark` = #{entity.remark}, </if>
			<if test="entity.content != null and entity.content !=''" >`content` = #{entity.content}, </if>
			`update_time` = now()
		</set>
		where id = #{entity.id}
	</update>

	<update id="updateByCode">
		update platform_expand_info
		<set>
			<if test="entity.name != null and entity.name !=''" >`name` = #{entity.name}, </if>
			<if test="entity.valid != null" >`valid` = #{entity.valid}, </if>
			<if test="entity.remark != null and entity.remark !=''" >`remark` = #{entity.remark}, </if>
			<if test="entity.content != null and entity.content !=''" >`content` = #{entity.content}, </if>
			`update_time` = now()
		</set>
		where `code` = #{entity.code}
	</update>

	<delete id="deleteById">
		delete from platform_expand_info where id = #{id}
	</delete>
	
	<delete id="deleteBatchByIds">
		delete from platform_expand_info where id in 
		<foreach item="id" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>